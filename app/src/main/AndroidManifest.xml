<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blissapp.flipcard">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.blissapp.flipcard.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.blissapp.flipcard.NewPostActivity" />
        <activity
            android:name="com.blissapp.flipcard.SignInActivity"
            android:label="Login" />
        <activity android:name="com.blissapp.flipcard.MainActivity" />
        <activity
            android:name="com.blissapp.flipcard.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.blissapp.flipcard.PostDetailActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="540acb20bccc5cf377a52bed3bdae6a12e77b910" />
    </application>

</manifest>